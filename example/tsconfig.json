{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["ES6"],
    "module": "ES2015",
    "noEmitOnError": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "**/__tests__/*", 
    "node_modules",       
    "babel.config.js",
  ],
}